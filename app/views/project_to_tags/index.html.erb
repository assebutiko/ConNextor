<h1>Listing Project To Tags</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Project tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_to_tags.each do |project_to_tag| %>
      <tr>
        <td><%= project_to_tag.project_id %></td>
        <td><%= project_to_tag.project_tag_id %></td>
        <td><%= link_to 'Show', project_to_tag %></td>
        <td><%= link_to 'Edit', edit_project_to_tag_path(project_to_tag) %></td>
        <td><%= link_to 'Destroy', project_to_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

