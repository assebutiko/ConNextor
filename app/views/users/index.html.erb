<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= form_tag users_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :first_name => nil, :last_name => nil %>
  </p>
<% end %>


<%= will_paginate @allusers %>

<ul class="users">
  <%= render @allusers %>
