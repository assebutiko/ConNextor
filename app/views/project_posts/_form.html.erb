<%= form_for (@project_post), :url => url_for(:controller => 'project_posts', :action => 'create'), remote: true, do |f| %>

  <div class="field">
    <%= f.hidden_field :project_id, value: params[:project_id] %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, value: current_user_id %>
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
