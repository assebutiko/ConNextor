<div class="project-post">
  <div><%= image_tag 'cats/cat-profile.jpg', class:'post-image' %></div>
  <div id="<%="post-body-#{project_post.id}"%>" class="post-body col-md-10">
      <p class="post-username"><%= User.find(project_post.user_id).username %></p>
      <p class="post-message"><%= project_post.text %></p>
      <% if project_post.is_post_owner?(current_user) %>
        <%= link_to 'Edit', edit_project_post_path(project_post) %>
        <%= link_to 'Delete', project_post, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
  </div>
</div>

