<% project_comment ||= @project_comment %>

<%= form_for project_comment, remote: @project_comment ? false : true do |f| %>
  <%= f.hidden_field :project_post_id %>

  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_field :text, id: "post-comment-text-#{project_comment.project_post_id}" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
