<p id="notice"><%= notice %></p>

<h1>Listing Project Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_tasks.each do |project_task| %>
      <tr>
        <td><%= project_task.project_id %></td>
        <td><%= project_task.user_id %></td>
        <td><%= project_task.name %></td>
        <td><%= project_task.description %></td>
        <td><%= project_task.state %></td>
        <td><%= link_to 'Show', project_task %></td>
        <td><%= link_to 'Edit', edit_project_task_path(project_task) %></td>
        <td><%= link_to 'Destroy', project_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

