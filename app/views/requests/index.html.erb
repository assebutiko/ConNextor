<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Receiver</th>
      <th>Sender</th>
      <th>Request type</th>
      <th>Request type</th>
      <th>Message</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.receiver_id %></td>
        <td><%= request.sender_id %></td>
        <td><%= request.request_type %></td>
        <td><%= request.request_type_id %></td>
        <td><%= request.message %></td>
        <td><%= request.link %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

