<div id="user_nav">
  <% if logged_in? %>
      Logged in as <%= current_user.username %>.
      <%= link_to 'Create project', new_project_path %>
      <%= link_to 'All users', users_path %>
      <%= link_to 'All projects', projects_path %>
      <%= link_to 'My profile', user_path(current_user) %>
      <%= link_to 'Requests', requests_path %>
      <%= link_to 'Notifications', notifications_path %>
      <%= link_to 'Settings', edit_user_path(current_user) %>
      <%= link_to 'Log out', log_out_path %>
  <% else %>
      <%= link_to 'Sign up', sign_up_path %> or
      <%= link_to 'Log in', log_in_path %> or
      <%= link_to 'Connect with Facebook', '/auth/facebook' %>
      <%= link_to 'Connect with Twitter', '/auth/twitter' %>
      <%= link_to 'Connect with Linkedin', '/auth/linkedin' %>
  <% end %>
</div>
<% flash.each do |name, msg| %>
    <div class="alert alert-<%= name %>"><%= msg %></div>
<% end %>
