<%= form_for user_project_follow, url: url_for(controller: 'user_project_follows', action: 'create'), remote: true, html: { id: "project_follow_button" } do |f| %>
  <%= f.hidden_field :user_id, value: current_user_id %>
  <%= f.hidden_field :project_id, value: params[:project_id] %>
  <%= f.submit "Follow", class: "btn btn-large btn-primary" %>
<% end %>