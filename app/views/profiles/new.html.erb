<div class="container">
  <h2>Welcome to ConNextor!</h2>

  <%= form_for @profile, html: {class: 'form-horizontal'} do |f| %>
      <% if @profile.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

            <ul>
              <% @profile.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <%= render 'edit_geographic', f: f %>

      <!--User Fields-->
      <%= fields_for @profile.user do |user_fields| %>
          Interests
          <%= render 'edit_interests', f: user_fields %>
          Skills
          <%= render 'edit_skills', f: user_fields %>
      <% end %>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-6">
          <%= f.submit 'Submit', name: 'finish', class: 'btn-upright' %>
        </div>
      </div>

      <%= link_to 'Skip', @profile %>
  <% end %>
</div>