<%= form_for @profile, remote: true, authenticity_token: true, html: {class: 'form-horizontal', id: 'profile-form'} do |f| %>
    <%= f.hidden_field :id %>

    <div class="row section-container">
      <div class="section-header">
        <div class="big-header">
          <p>Hey, Welcome to ConNextor</p>
        </div>
      </div>

      <div class="col-sm-4 col-sm-push-8 side-description">
        <p class="title">Step 1 of 4</p>
        <p class="text">Lets get started. Some basic information about you.</p>
      </div>

      <div class="col-sm-8 col-sm-pull-4 section-form-container">
        <%= fields_for :user, @profile.user do |user_fields| %>
            <%= render 'users/form_first_last_name', f: user_fields %>
        <% end %>
      </div>

      <div class="end-section col-sm-12">
        <input type="submit" name="Submit" class="btn-upright" value="Submit" />
      </div>
    </div>
<% end %>
