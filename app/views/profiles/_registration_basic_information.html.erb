<%= form_for @user, url: {controller: 'profiles', action:'create'}, method: :create, remote: true, authenticity_token: true, html: {class: 'form-horizontal', id: 'profile-form'} do |f| %>

    <div class="row section-container">
      <div class="section-header">
        <div class="big-header">
          <p>Hey, Welcome to ConNextor</p>
        </div>
      </div>

      <div class="col-sm-4 col-sm-push-8 side-description">
        <p class="title">Step 1 of 4</p>
        <p class="text">Lets get started. Some basic information about you.</p>
      </div>

      <div class="col-sm-8 col-sm-pull-4 section-form-container">
        <%= render 'users/form_first_last_name', f: f %>
      </div>

      <div class="end-section col-sm-12">
        <input type="submit" name="Submit" class="btn-upright" value="Next" />
      </div>
    </div>
<% end %>
