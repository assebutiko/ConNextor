<p id="notice"><%= notice %></p>

<h1>Listing Project Tags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_tags.each do |project_tag| %>
      <tr>
        <td><%= project_tag.name %></td>
        <td><%= link_to 'Show', project_tag %></td>
        <td><%= link_to 'Edit', edit_project_tag_path(project_tag) %></td>
        <td><%= link_to 'Destroy', project_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

